{
	"name": "@screenbook/cli",
	"version": "1.3.0",
	"description": "CLI for Screenbook - screen catalog and navigation graph generator",
	"type": "module",
	"bin": {
		"screenbook": "./dist/index.mjs"
	},
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.mts"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@babel/parser": "^7.28.5",
		"@screenbook/core": "workspace:*",
		"gunshi": "^0.27.0",
		"jiti": "^2.6.1",
		"minimatch": "^10.1.1",
		"picocolors": "^1.1.1",
		"prompts": "^2.4.2",
		"tinyglobby": "^0.2.0"
	},
	"devDependencies": {
		"@types/prompts": "^2.4.9",
		"tsdown": "catalog:"
	},
	"keywords": [
		"screenbook",
		"cli",
		"screen",
		"catalog",
		"navigation"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/wadakatu/screenbook.git",
		"directory": "packages/cli"
	},
	"homepage": "https://github.com/wadakatu/screenbook#readme",
	"bugs": {
		"url": "https://github.com/wadakatu/screenbook/issues"
	}
}
