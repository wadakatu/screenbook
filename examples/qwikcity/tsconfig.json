{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ES2020",
		"lib": ["ES2021", "DOM", "DOM.Iterable"],
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"jsxImportSource": "@builder.io/qwik",
		"strict": true,
		"noEmit": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"]
}
