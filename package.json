{
	"name": "screenbook",
	"version": "0.0.0",
	"private": true,
	"description": "Screen catalog and navigation graph generator for frontend applications",
	"type": "module",
	"scripts": {
		"build": "pnpm -r run build",
		"dev": "pnpm -r run dev",
		"test": "pnpm -r run test",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "pnpm --filter @screenbook/ui run format",
		"docs:dev": "pnpm --filter screenbook-docs run dev",
		"docs:build": "pnpm --filter screenbook-docs run build",
		"docs:preview": "pnpm --filter screenbook-docs run preview",
		"docs:generate": "pnpm --filter screenbook-docs run generate:cli",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "pnpm build && pnpm publish -r --access public"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.0",
		"@changesets/changelog-github": "^0.5.2",
		"@changesets/cli": "^2.29.8",
		"typescript": "^5.9.0",
		"vitest": "^4.0.0"
	},
	"packageManager": "pnpm@10.26.2",
	"engines": {
		"node": ">=22"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"sharp"
		]
	}
}
