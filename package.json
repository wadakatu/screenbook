{
	"name": "screenbook",
	"version": "0.0.0",
	"private": true,
	"description": "Screen catalog and navigation graph generator for frontend applications",
	"type": "module",
	"scripts": {
		"build": "pnpm -r run build",
		"dev": "pnpm -r run dev",
		"test": "pnpm -r run test",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "pnpm --filter @screenbook/ui run format",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "pnpm build && pnpm publish -r --access public"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.0",
		"@changesets/changelog-github": "^0.5.2",
		"@changesets/cli": "^2.29.8",
		"typescript": "^5.7.2",
		"vitest": "^2.1.8"
	},
	"packageManager": "pnpm@9.15.1",
	"engines": {
		"node": ">=20"
	}
}
